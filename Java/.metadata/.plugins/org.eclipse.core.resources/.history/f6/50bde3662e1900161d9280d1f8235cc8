package year_2016.polygongame;

public class Edge {
	private Node p1, p2;
	private int index;
	private char op;
	public Edge(Node p1, Node p2, char op, int index){
		this.p1 = p1;
		this.p2 = p2;
		this.index = index;
		this.op = op;
		p1.setEdge(this);
		p2.setEdge(this);
	}
	public void setNode1(Node p){
		this.p1 = p;
	}
	public void setNode2(Node p){
		this.p2 = p;
	}
	public Node getNode1(){
		return p1;
	}
	public Node getNode2(){
		return p2;
	}
	public char getOp(){
		return op;
	}
	public void merge(){
		
		if(op == '+'){
			p1.mergeAdd(p2);
		}
	}
	
}
